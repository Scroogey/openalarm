<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="#121212">

    <!-- Text Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/notif_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notif_wake_up"
            android:textColor="#FFFFFF" />

        <!-- Timer -->
        <Chronometer
            android:id="@+id/notif_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Snooze Button -->
    <LinearLayout
        android:id="@+id/btn_snooze"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- Tint matches the text (Primary) -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_reset_time"
            android:tint="#FFFFFF" />

        <!-- Text matches the icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_snooze"
            android:text="@string/snooze_10_min"
            android:textSize="12sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Stop Button -->
    <LinearLayout
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- Red Tint for Stop -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_outline_cancel"
            android:tint="#F44336" />
        
        <!-- Red Text to match Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_stop"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#F44336" />
    </LinearLayout>

</LinearLayout>
